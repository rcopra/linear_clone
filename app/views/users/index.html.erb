<h1 class="text-2xl font-bold mb-4">Users</h1>

<ul class="space-y-2">
  <% @users.each do |user| %>
    <li class="bg-white shadow rounded p-4">
      <p class="text-lg font-semibold"><%= user.full_name %></p>
      <p class="text-sm text-gray-600"><%= user.email %></p>
    </li>
  <% end %>
</ul>
